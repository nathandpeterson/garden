---
interface Props {
    backgroundColor: string;
    href: string;
    text: string;
}
const { backgroundColor, href, text } = Astro.props;
---
<style>
    a {
        text-decoration: none;
        color: white;
        border-radius: 7px;
        width: 100%;
    }
    a:visited {
        color: white;
    }
    li {
        list-style: none;
        text-transform: uppercase;
        text-align: center;
        border-radius: 5px;
        color: white;
        padding: 10px;
    }
    a:hover {
        transform: scale(1.05);
        transition: .5s all;
    }
</style>

<a href={href} style={{ backgroundColor: backgroundColor }}>
    <li>{text}</li>
</a>

