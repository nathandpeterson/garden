---
import { MarkdownLayoutProps } from 'astro';
import Nav from '../components/Nav.astro';
import BaseHead from '../components/BaseHead.astro';
type Props =  MarkdownLayoutProps<{
    imageAlt: string;
    imageSrc: string;
    title: string;
}> 
const { frontmatter: { imageAlt, imageSrc, title } } = Astro.props;
---
<html>
    <BaseHead title={title}/>
    <body>
        <Nav />
        <section class="image-container">
            <img loading="lazy" src= {imageSrc} alt={imageAlt}/>
        </section>
        <section>
            <h2>{title}</h2>
        </section>
        <section>
            <hr />
        </section>

        <section>
            <slot />
        </section>

    </body>
</html>

<style>
    section {
        padding: 0 15px;

        hyphens: auto;
    }
    @media (min-width:600px) {
        section {
            padding: 0 20%;
        }
    }

    h2 {
        text-transform: uppercase;
        font-size: 2rem;
        letter-spacing: .1ch;
        color: magenta;
    }
    .image-container {
        display: flex;
        justify-content: center;
    }
    img {
        max-width: 100%;
    }

    .back {
        color: magenta;
    }

    :global(blockquote) {
        background: #f5f5f5;
        font-size: 1em;
        border-left: .7em solid #ccc;
        margin: 1em .5em;
        padding: .1em 1em;
    }
</style>
